<Window x:Class="PT_Lab2.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PT_Lab2"
        mc:Ignorable="d"
        Title="Create new file or directory" Height="100" Width="200">
    <Grid>
        <StackPanel>
            <TextBlock>Podaj nazwę pliku z rozszerzeniem</TextBlock>
            <TextBlock>(bez rozszerzenia: katalog)</TextBlock>
            <TextBox x:Name="FileNameTextBox"/>
            <Button Content="Zapisz" Click="OnSave" />
        </StackPanel>
    </Grid>
</Window>
